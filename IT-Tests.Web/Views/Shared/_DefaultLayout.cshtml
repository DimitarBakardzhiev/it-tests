<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - IT-TESTS.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body data-spy="scroll" data-target="#navbar" data-offset="0" id="default-body">
    <header id="header" role="banner">
        <div class="container">
            <div id="navbar" class="navbar navbar-default">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#"></a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="active">
                            @Html.ActionLink(" ", "Index", "Home", routeValues: null, htmlAttributes: new { @class = "icon-home" })
                        </li>
                        <li><a href="#tests">Tests</a></li>
                        <li><a href="#tutorials">Tutorials</a></li>
                        <li><a href="#ladder">Ladder</a></li>
                        @Html.Partial("_LoginPartial")
                    </ul>
                    <a href="#english"><img src="images/blank.gif" class="flag flag-gb" alt="English" /></a>
                    <a href="#bulgarian"><img src="images/blank.gif" class="flag flag-bg" alt="Bulgarian" /></a>
                </div>
            </div>
        </div>
    </header>
        <div id="default-wrapper">
            <div class="container">
                @RenderBody()
                <footer>
                    <p id="copyright">&copy; @DateTime.Now.Year - IT-TESTS.NET</p>
                </footer>
            </div>
        </div>

    @*<div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>*@

    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)
</body>
</html>
