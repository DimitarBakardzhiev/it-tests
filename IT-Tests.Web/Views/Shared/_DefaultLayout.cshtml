<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - IT-TESTS.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body data-spy="scroll" data-target="#navbar" data-offset="0" id="default-body">

    <div class="row">
        @Html.Partial("_NavigationPartial")
    </div>
    <div id="default-wrapper">
        <div class="row">
            <div class="col-md-12">
                <div class="container">
                    @RenderBody()
                </div>

                <footer class="container">
                    <div class="col-md-offset-10 col-md-2">
                        <p id="copyright">&copy; @DateTime.Now.Year - IT-TESTS.NET</p>
                    </div>
                </footer>
            </div>
        </div>
    </div>

    @*<div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>*@

    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)
</body>
</html>
